<unity>
  <map_button index="1" name="WandButton" key="LCONTROL" button="A" unity_button="Fire1" />
  <map_button index="2" name="ChangeWand" key="LSHIFT" button="X" unity_button="Fire3" />
  <map_button index="3" name="Reset" key="LMENU" button="Y" unity_button="Fire2"/>
  <map_button index="4" name="Jump" key="SPACE" button="B" unity_button="Jump"/>
  <map_button index="5" name="WandLook" />
  <map_button index="6" name="NavSpeed" />
  <map_button index="7" name="WandDrive" />
  <map_valuator index="1" dead_zone=".1" name="Yaw" axis="THUMB_RX" positive_key="Q" negative_key="E" />
  <map_valuator index="2" dead_zone=".1" name="Forward" axis="THUMB_LY" positive_key="W" negative_key="S" unity_axis="Vertical" />
  <map_valuator index="3" dead_zone=".1" name="Strafe" axis="THUMB_LX" positive_key="D" negative_key="A" unity_axis="Horizontal" />
  <map_valuator index="4" dead_zone=".1" name="Pitch" axis="THUMB_RY" />
  <map_tracker index="1" name="Head" />
  <map_tracker index="2" name="Wand" />
</unity>
